<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/aihealth5"
    android:layout_height="match_parent"
    tools:context=".Signup">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="35sp"
                android:text="SignUp"
                android:textColor="#000"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/etNmae"
                android:textColorHint="#fb5c5252"
                android:textAlignment="center"
                android:hint="Enter Your Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"/>

            <EditText
                android:id="@+id/etEmail"
                android:textColorHint="#fb5c5252"
                android:textAlignment="center"
                android:hint="Enter Valid Email Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                />
            <EditText
                android:id="@+id/etPhone"
                android:textColorHint="#fb5c5252"
                android:textAlignment="center"
                android:hint="Enter Your Phone number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                />

            <EditText
                android:id="@+id/etPassword"
                android:textColorHint="#fb5c5252"
                android:textAlignment="center"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                />
            <EditText
                android:id="@+id/etPassword2"
                android:textColorHint="#fb5c5252"
                android:textAlignment="center"
                android:hint="Enter Password again"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                />

            <Button
                android:id="@+id/btnSignUp"
                android:text="Register"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_width="@dimen/buttonWidth2"
                android:layout_height="@dimen/buttonLenghth2"
                android:background="@drawable/buttonstyle4"
                android:shadowColor="#A8A8A8"
                android:layout_gravity="center"
                android:shadowDx="1"
                android:shadowDy="0"
                android:shadowRadius="0"
                />




        </LinearLayout>

    </ScrollView>





</android.support.constraint.ConstraintLayout>