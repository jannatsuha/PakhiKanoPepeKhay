<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aihealth1"
    tools:context=".MenuSelection">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn"
                        android:text="Chat with Curo"
                        android:layout_marginTop="20dp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="25dp"
                        android:textSize="@dimen/textsize25"
                        android:background="@drawable/buttonstyle2"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="1"
                        android:shadowDy="0"
                        android:onClick="GoToChatbot"
                        android:shadowRadius="4"
                        />

                    <Button
                        android:id="@+id/btnSpecialists"
                        android:text="Specialists list"
                        android:onClick="specialistsName"
                        android:layout_marginTop="20dp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="25dp"
                        android:textSize="@dimen/textsize25"
                        android:background="@drawable/buttonstyle3"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="1"
                        android:shadowDy="0"
                        android:shadowRadius="4"
                        />
                    <Button
                        android:id="@+id/btn3"
                        android:text="Hospital list"
                        android:layout_marginTop="20dp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="25dp"
                        android:textSize="@dimen/textsize25"
                        android:background="@drawable/buttonstyle2"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="1"
                        android:shadowDy="0"
                        android:shadowRadius="4"
                        />
                    <Button
                        android:id="@+id/btn4"
                        android:text="Medicine Details"
                        android:layout_marginTop="20dp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="25dp"
                        android:textSize="@dimen/textsize25"
                        android:background="@drawable/buttonstyle3"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="1"
                        android:shadowDy="0"
                        android:shadowRadius="4"
                        />

                    <Button
                        android:id="@+id/btnSignout"
                        android:text="Sign out"
                        android:onClick="Signout"
                        android:layout_marginTop="40dp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="95dp"
                        android:textSize="@dimen/textsize20"
                        android:background="@drawable/buttonstyle3"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="1"
                        android:shadowDy="0"
                        android:shadowRadius="4"
                        />


                </LinearLayout>
            </ScrollView>

</android.support.constraint.ConstraintLayout>