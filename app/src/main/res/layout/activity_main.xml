<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/chatbot_background"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/layout_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_weight="22"
            android:layout_height="match_parent"
            android:id="@+id/myRecyclerview">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/invisibleButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#201f1f"
            android:background="@drawable/shape_circle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginBottom="3dp"
            android:onClick="GotoSpecialistsOption"
            android:text=" Click here for Specialists list "/>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etTypeMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColorHint="#CFD8DC"
                android:textColor="#CFD8DC"
                android:hint="Write a message" />

            <ImageView
                android:id="@+id/sendImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="4dp"
                android:src="@android:drawable/ic_menu_send" />

        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>